---
import cn from "classnames";

import { Image } from "astro:assets";
import Circle from "../circle/Circle.astro";

import phoneImg from "../../assets/phone.svg";
import emailImg from "../../assets/email.svg";
import instagramImg from "../../assets/instagram-256.png";

import styles from "./header.module.scss";

export const pages = [
  {
    path: "https://drive.google.com/file/d/1lQnXic4f19HyEiq9rXZHFfM-LJ6nqiyg/preview",
    title: "Menu",
  },
  {
    path: "/catering",
    title: "Catering",
  },
  {
    path: "/about",
    title: "About",
  },
  {
    path: "/sunburnsfarm",
    title: "Sunburns Farm",
  },
];

const { pathname } = new URL(Astro.request.url);
---

<header class={styles.header}>
  <nav class={styles.nav}>
    <h1 class={pathname === "/" ? `${styles.logo} underlined` : styles.logo}>
      <a href="/">Schlop Stop</a>
    </h1>

    {
      pages.map(({ path, title }) => (
        <p class={styles.link}>
          <a
            href={path}
            class={cn(styles.link, { [styles.active]: path === pathname })}
          >
            {title}
          </a>
        </p>
      ))
    }

    <a href="https://www.instagram.com/schlopstop/" class={styles.icon}>
      <Circle>
        <Image src={instagramImg} alt="instagram icon" />
      </Circle>
    </a>

    <a href="mailto:contact@schlopstop.com" class={styles.icon}>
      <Circle>
        <Image src={emailImg} alt="email icon" />
      </Circle>
      <!-- <p>contact@schlopstop.com</p> -->
    </a>

    <a href="tel:215-756-1916" class={styles.icon}>
      <Circle>
        <Image src={phoneImg} alt="phone icon" />
      </Circle>
      <!-- <p>215-756-1916</p> -->
    </a>
  </nav>
</header>
