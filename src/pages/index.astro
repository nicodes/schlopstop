---
import Catering from "../components/sections/Catering.astro";
import Events from "../components/sections/Events.astro";
import FoodTruckMenu from "../components/sections/FoodTruckMenu.astro";
import OurPartners from "../components/sections/OurPartners.astro";
import WhoAreWe from "../components/sections/WhoAreWe.astro";
import Layout from "../layouts/Layout.astro";
import { getMenu, withCache } from "../utils/menu";

const { plates, sandwiches, salads, sides } = await withCache(() =>
  getMenu(import.meta.env.MENU_SHEET_ID)
);
---

<Layout title="Schlop Stop" class="flex flex-col gap-20">
    <WhoAreWe />
    <FoodTruckMenu />
    <Catering />
    <OurPartners />
    <Events />
</Layout>
